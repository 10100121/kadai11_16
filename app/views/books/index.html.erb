 <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<h3>Books</h3>

<table>
<thead>
<tr>
<th class="a1">title</th>
<th class="a2">body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |books| %>
<tr>
<td class="a3">
<%= books.title %>
</td>
<td class="a4">
<%= books.body %>
</td>
<td>
<%= link_to "show",  book_path(books.id) %>

<%= link_to "edit",  edit_book_path(books.id) %>
<%= link_to "destroy", book_path(books.id), method: :delete, "data-confirm" => "Are you sure?" %>

</td>
</tr>
<% end %>
</tbody>
</table>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h4 class="a5">Title</h4>
<%= f.text_field :title %>

<h4 class="a6">Body</h4>
<%= f.text_area :body %>

<br class="a7"><%= f.submit 'Create Book' %></br>

<% end %>